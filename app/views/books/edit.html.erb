

<div  class="container">
  <!--エラーメッセージ-->
  <%= render 'layouts/error_messages', model: @book %>
  <div class="row">
    <div class="col-xs-offset-3 col-xs-6">
      <h1>Editing Book</h1>

       <%= form_with model: @book do |f| %>
      <div class='form-group'>

        <%= f.label :title, class: 'col-sm-2 control-label' %>
        <div class='col-sm-10'>
          <%= f.text_field :title %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :opinion, class: 'col-sm-2 control-label' %>
        <div class='col-sm-10'>
          <%= f.text_area :body %>
        </div>
      </div>
      <div class='col-sm-10'>
       <%= f.submit 'Update Book' , class: 'btn btn-success'%>
      </div>
      <% end %>


      <div class="menu">
        <%= link_to "Show", book_path(@book) %>
        |
        <%= link_to "Back", books_path %>
      </div>
      </div>
    <div class="col-xs-3"></div>
  </div>
</div>

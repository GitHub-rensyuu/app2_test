
<!--投稿エラー表示呼び出し-->
<%= render 'layouts/error_messages', model: @book %>

<div class="container">
  <!--横並びにする-->
  <div class="row">
    <div class="col-md-3">
      <!--User info部分-->
      <%= render 'users/user', user: @user %>

      <!--New book部分-->
      <h2>New book</h2>
      <%= render 'books/book', book: @book %>
    </div>

    <!--Books部分-->
    <div class="col-md-9">
      <table class="table book-index table2">
        <h2>Books</h2>
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>

                <%= link_to user_path(book.user) do %>
                  <%= image_tag book.user.get_profile_image(100,100) %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>


  </div>
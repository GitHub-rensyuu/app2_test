<!--New Book部分-->

<%= form_with model: @book do |f| %>
      <div class='form-group'>
        <%= f.label :Title, class: 'col-sm-2 control-label' %>
        <div class='col-sm-10'>
          <%= f.text_field :title %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :Opinion, class: 'col-sm-2 control-label' %>
        <div class='col-sm-10'>
          <%= f.text_area :body %>
        </div>
      </div>
      <br>
    <%= f.submit 'Create Book' , class: 'btn btn-success'%>
  <% end %>

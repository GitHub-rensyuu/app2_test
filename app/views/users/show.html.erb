<!--エラーメッセージ-->
  <%= render 'layouts/error_messages',  model:@user %>


  <div class="container">
    <div class="row">
      <div class="col-md-3">

        <!--User info部分-->
        <%= render 'users/user', user: @user %>

        <!--New book部分-->
        <h2>New book</h2>
        <%= render 'books/book', book: @book %>

      </div>

      <!--Book detail部分-->
      <div class="col-md-9">
        <h1>Book detail</h1>
        <table class="table table-user-show">
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to user_path(@user) do %>
                <%= image_tag book.user.get_profile_image(50,50) %>
              <% end %></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
            </tr>
          <% end %>
        </table>
      </div>

    </div>
</div>





